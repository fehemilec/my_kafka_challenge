{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string"
        },
        "environment": {
            "type": "string"
        },
        "tenantId": {
            "type": "string"
        }
    },
    "functions": [],
    "variables": {
        "vNetName": "funcapp-vnet"
    },
    "resources": [

            {
                "type": "Microsoft.Resources/deployments",
                "apiVersion": "2021-04-01",
                "name": "Order-Producer-FA-VNET",
                "properties": {
                    "mode": "Incremental",
                    "templateLink": {
                    "relativePath": "vnet.json"
                    },
                    "parameters": {
                    "vNetName": {
                        "value": "[variables('vNetName')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "environment": {
                        "value": "[parameters('environment')]"
                    },
                    }
                }
    },

        {
                "type": "Microsoft.Resources/deployments",
                "apiVersion": "2021-04-01",
                "name": "Order-Producer-FA",
                "dependsOn": [
                    "[resourceId('Microsoft.Resources/deployments', concat('Order-Producer-FA-VNET'))]"
                ],
                "properties": {
                    "mode": "Incremental",
                    "templateLink": {
                    "relativePath": "function-app.json"
                    },
                    "parameters": {

                    "vNetName": {
                        "value": "[variables('vNetName')]"
                    },
                    "vNetSubnetName": {
                        "value": "default"
                    },
                    "tenantId": {
                        "value": "[parameters('tenantId')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },

                    }
                }
    },

    {
                "type": "Microsoft.Resources/deployments",
                "apiVersion": "2021-04-01",
                "name": "Azure-Kubernetes-Services",
                "dependsOn": [],
                "properties": {
                    "mode": "Incremental",
                    "templateLink": {
                    "relativePath": "aks.json"
                    },
                    "parameters": {

                    "vNetName": {
                        "value": "[variables('vNetName')]"
                    },
                    "vNetSubnetName": {
                        "value": "default"
                    },
                    "tenantId": {
                        "value": "[parameters('tenantId')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },

                    }
                }
    }
    ],
    "outputs": {}
}